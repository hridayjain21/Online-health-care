<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_patient_profile"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_profile_paient_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22BE87"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#fff"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="120dp"
                    android:id="@+id/edit_profile_patient_profile_pic"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_anon_user_48dp"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="3dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginStart="230dp"
                    android:id="@+id/edit_profile_patient_profile_pic_change"
                    android:layout_marginTop="50dp"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/Full_name_patient_icon_in_edit_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full name : "
                android:textColor="#A6093E"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:textSize="20dp"
                android:text="Hriday Jain"
                android:id="@+id/Full_name_patient_in_edit_patient"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/contact_patient_icon_in_edit_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact : "
                android:textColor="#A6093E"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="9425144877"
                android:inputType="number"
                android:id="@+id/contact_patient_in_edit_patient"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/email_patient_icon_in_edit_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:textColor="#A6093E"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                android:text="hridaguna@gmail.com"
                android:id="@+id/email_patient_in_edit_patient"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/Blood_group_patient_icon_in_edit_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group : "
                android:textColor="#A6093E"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="B+"
                android:id="@+id/Blood_group_patient_in_edit_patient"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/progress_in_edipat"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/Medical_history_patient_icon_in_edit_patient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical History :  "
                android:textColor="#A6093E"
                android:layout_marginStart="15dp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:inputType="textMultiLine"
                android:text="ihdihdihwihdihwiu widhuhd dhwuh"
                android:id="@+id/Medical_history_patient_in_edit_patient"
                android:background="@drawable/edittext_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/button_editprofile_patient"
                android:text="Update profile"
                android:background="@drawable/button_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
