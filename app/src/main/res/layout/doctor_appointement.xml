<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="7dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/cardview_light_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/patient_name_in_doc_apointement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Patient name"
            android:textColor="#22BE87"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/consultation_in_doc_apointement"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/button_radius_accent_color"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="Consultation"
            android:textColor="#fff"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/patient_no_in_doc_apointement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/roboto_light"
            android:text="0652316456"
            android:textColor="#605E5E"
            android:textSize="14sp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/patient_image_in_doc_apointement"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/ic_anon_user_48dp" />

        <TextView
            android:id="@+id/appoitementtime_time_in_doc_apointement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="68dp"
            android:fontFamily="@font/roboto"
            android:text="12/06/2020 at 9pm"
            android:textColor="#22BE87"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/problem_in_doc_apointement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/roboto"
            android:text="Problem : Fever"
            android:textColor="#22BE87"
            android:textSize="16sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>