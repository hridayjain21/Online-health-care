<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirm_appointement_activity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/valide"
        android:background="#DAFBDF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_dialog"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for choosing our service !"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointement information"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/cardview_dark_background"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/time_icon_confirm_appointemnt"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_date"/>
            <TextView
                android:id="@+id/time_confirm_appointemnt"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10h00 at 31/05/2020"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/doctor_icon_confirm_appointemnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_account_24dp"/>
            <TextView
                android:id="@+id/Doctor_confirm_appointemnt"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/cardview_dark_background"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:id="@+id/consultation_icon_confirm_appointemnt"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_local_hospital_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/consultation_confirm_appointemnt"
                android:text="Consultation"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:id="@+id/problem_icon_confirm_appointemnt"
                android:layout_height="wrap_content"
                android:text="problem : "
                android:layout_gravity="bottom"
                android:src="@drawable/ic_local_hospital_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/problem_confirm_appointemnt"
                android:text="Fever"
                android:textSize="14sp"
                android:layout_marginLeft="4dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirm_btn_in_confirm_appointement_activity"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:text="CONFIRM"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>