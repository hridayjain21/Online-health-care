<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="4"-->
<!--            android:id="@+id/unseen_message_in_mypatient"-->
<!--            android:layout_marginStart="290dp"-->
<!--            android:background="@drawable/unseen_messsage"-->
